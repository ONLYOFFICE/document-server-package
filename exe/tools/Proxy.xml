<service>
	<id>DsProxySvc</id>
	<name>DsProxySvc_Display</name>
	<description>DsProxySvc_Descr</description>
	<priority>RealTime</priority>
	<startmode>Automatic</startmode>
	<delayedAutoStart>true</delayedAutoStart>
	<onfailure action="restart" delay="1 sec"/>
	<logpath>APPDIR\Log\nginx</logpath>
	<workingdirectory>APPDIR\nginx</workingdirectory>
	<executable>&quot;APPDIR\nginx\nginx.exe&quot;</executable>
	<startarguments>-p &quot;APPDIR\nginx&quot;</startarguments>
  	<stopexecutable>&quot;APPDIR\nginx\nginx.exe&quot;</stopexecutable>
  	<stoparguments>-p &quot;APPDIR\nginx&quot; -s quit</stoparguments>
	<env name="OPENSSL_CONF" value="openssl_env" />
	<stopexecutable>APPDIR\nginx\nginx.exe</stopexecutable>
	<log mode="roll-by-size">
  		<sizeThreshold>10240</sizeThreshold>
  		<keepFiles>8</keepFiles>
	</log>
</service>
