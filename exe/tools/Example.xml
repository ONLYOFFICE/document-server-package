<service>
	<id>DsExampleSvc</id>
	<name>DsExampleSvc_Display</name>
	<description>DsExampleSvc_Descr</description>
	<priority>RealTime</priority>
	<startmode>Manual</startmode>
	<onfailure action="restart" delay="1 sec"/>
	<logpath>APPDIR\Log\example</logpath>
	<workingdirectory>APPDIR\example</workingdirectory>
	<executable>APPDIR\example\example.exe</executable>
	<env name="NODE_ENV" value="production-windows" />
  	<env name="NODE_CONFIG_DIR" value="APPDIR\example\config" />
  	<env name="NODE_DISABLE_COLORS" value="Node_Disable_Colors" />
	<log mode="roll-by-size">
  		<sizeThreshold>10240</sizeThreshold>
  		<keepFiles>8</keepFiles>
	</log>
</service>
