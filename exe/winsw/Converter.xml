<service>
	<id>DsConverterSvc</id>
	<name>DsConverterSvc_Display</name>
	<description>DsConverterSvc_Descr</description>
	<priority>RealTime</priority>
	<startmode>Automatic</startmode>
	<delayedAutoStart>true</delayedAutoStart>
	<onfailure action="restart" delay="1 sec"/>
	<logpath>%BASE%\..\Log\converter</logpath>
	<workingdirectory>%BASE%\..\server\FileConverter</workingdirectory>
	<executable>%BASE%\..\server\FileConverter\converter.exe</executable>
	<env name="NODE_ENV" value="production-windows" />
	<env name="NODE_CONFIG_DIR" value="%BASE%\..\config" />
	<env name="NODE_DISABLE_COLORS" value="Node_Disable_Colors" />
	<env name="APPLICATION_NAME" value="App_Name" />
	<log mode="roll-by-size-time">
		<sizeThreshold>10240</sizeThreshold>
		<pattern>yyyyMMdd</pattern>
		<autoRollAtTime>00:00:00</autoRollAtTime>
		<keepFiles>30</keepFiles>
	</log>
</service>
