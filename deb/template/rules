#!/usr/bin/make -f
# -*- makefile -*-

export DH_VERBOSE=1

%:
	dh $@ --with=systemd

override_dh_shlibdeps:
override_dh_systemd_enable:
	dh_systemd_enable --name=ds-converter
	dh_systemd_enable --name=ds-metrics
	dh_systemd_enable --name=ds-docservice
override_dh_installinit:
	dh_systemd_enable --name=ds-converter
	dh_systemd_enable --name=ds-metrics
	dh_systemd_enable --name=ds-docservice
override_dh_systemd_start:
	dh_systemd_enable --name=ds-converter
	dh_systemd_enable --name=ds-metrics
	dh_systemd_enable --name=ds-docservice

override_dh_strip:
	dh_strip -Xdocservice -Xconverter -Xmetrics -Xexample -Xjson -Xcore.node
